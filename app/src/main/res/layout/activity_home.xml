<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity"
    tools:openDrawer="start">

    <!-- Main Content -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- App Bar - CHANGED FROM YELLOW TO BLUE -->
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sensacare_blue">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="@string/app_name"
                app:titleTextColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:fillViewport="true"
            android:paddingBottom="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ NEW DASHBOARD DESIGN â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ðŸ–¼  Top Section â€“ Greeting + Notification  -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp">

                    <!-- Profile container (shows photo or initials) -->
                    <FrameLayout
                        android:id="@+id/profileContainer"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_profile_bg">

                        <!-- Optional user photo -->
                        <ImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_avatar_placeholder"
                            android:contentDescription="@string/profile_photo" />

                        <!-- Fallback initials -->
                        <TextView
                            android:id="@+id/tvAvatarInitials"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="GG"
                            android:textColor="@color/sensacare_blue"
                            android:textStyle="bold"
                            android:textSize="18sp" />
                    </FrameLayout>

                    <!-- Greeting + tagline -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/profileContainer"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvGreeting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome, User"
                            android:textSize="18sp"
                            android:textColor="@color/sensacare_blue" />

                        <TextView
                            android:id="@+id/tvTagline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Smarter insights. Healthier you."
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />
                    </LinearLayout>

                    <!-- FIXED: Notification bell with proper margins and padding -->
                    <ImageView
                        android:id="@+id/ivNotifications"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:padding="4dp"
                        android:src="@drawable/ic_bell"
                        android:tint="@color/sensacare_blue" />

                    <!-- FIXED: Badge with proper positioning -->
                    <TextView
                        android:id="@+id/tvNotifBadge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignEnd="@id/ivNotifications"
                        android:layout_alignTop="@id/ivNotifications"
                        android:layout_marginEnd="-8dp"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/circle_badge_red"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <!-- ðŸ“Š  Health Metrics Summary header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Your health metrics"
                        android:textSize="16sp"
                        android:textColor="@color/sensacare_blue" />

                    <!-- FIXED: Date selector with proper size -->
                    <LinearLayout
                        android:id="@+id/btnDatePicker"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_gray_bg"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSelectedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_chevron_down"
                            android:tint="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>

                <!-- ðŸ§  Health Report Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/sensacare_blue">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp">

                        <!-- Left block -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- FIXED: Proper text size -->
                            <TextView
                                android:id="@+id/tvReportTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Health Report"
                                android:textSize="16sp"
                                android:textColor="@color/white" />

                            <!-- FIXED: Proper text size and padding, removed ET492 reference -->
                            <TextView
                                android:id="@+id/tvReportStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Connect your device to see health report"
                                android:textSize="13sp"
                                android:textColor="@color/white"
                                android:maxLines="2"
                                android:ellipsize="end" />

                            <!-- FIXED: Brighter text for visibility -->
                            <TextView
                                android:id="@+id/btnReportDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="View details >"
                                android:textSize="14sp"
                                android:textColor="@color/white" />
                        </LinearLayout>

                        <!-- FIXED: Progress indicators positioned properly -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            
                            <View
                                android:layout_width="24dp"
                                android:layout_height="4dp"
                                android:layout_gravity="end"
                                android:background="@color/success"
                                android:layout_marginBottom="4dp"/>
                                
                            <View
                                android:layout_width="24dp"
                                android:layout_height="4dp"
                                android:layout_gravity="end"
                                android:background="@color/success"/>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <!-- ðŸ’¡ Vitals Grid (2x3) - Replaced with proper LinearLayouts and CardViews -->
                <!-- Row 1: Heart Rate, Glucose -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Heart Rate Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardHeartRate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Heart Rate"
                                android:textSize="14sp"
                                android:textColor="@color/sensacare_blue"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--/BPM"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="8dp"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Connect your device"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Glucose Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGlucose"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Glucose"
                                android:textSize="14sp"
                                android:textColor="@color/sensacare_blue"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--/mg/dL"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="8dp"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Connect your device"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 2: Temperature, SpO2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Temperature Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTemperature"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Body Temp."
                                android:textSize="14sp"
                                android:textColor="@color/sensacare_blue"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--Â°F"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="8dp"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Connect your device"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- SpO2 Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSpO2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SpOâ‚‚"
                                android:textSize="14sp"
                                android:textColor="@color/sensacare_blue"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--%"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="8dp"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Connect your device"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Row 3: Blood Pressure, Respiratory -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Blood Pressure Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Blood Pressure"
                                android:textSize="14sp"
                                android:textColor="@color/sensacare_blue"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--/--"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="8dp"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Connect your device"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Respiratory Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRespiratory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Respiratory"
                                android:textSize="14sp"
                                android:textColor="@color/sensacare_blue"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="--/min"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginTop="8dp"/>
                                
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Connect your device"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€  DAILY ACTIVITIES  â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->

                <!-- Section title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your daily activities"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/sensacare_blue"
                    android:layout_marginBottom="12dp" />

                <!-- Container (vertical) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="16dp">

                    <!-- STEPS/WALKING CARD - Improved with clear labels -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRunning"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/sensacare_primary_light">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <!-- Icon / placeholder -->
                            <ImageView
                                android:id="@+id/ivRunIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_steps"
                                android:tint="@color/white"
                                android:contentDescription="Walking" />

                            <!-- Value & goal -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@id/ivRunIcon"
                                android:layout_marginStart="12dp">

                                <!-- Added activity type label -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Walking/Steps"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:alpha="0.9" />

                                <!-- FIXED: White text on dark background -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5.3 km"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white" />

                                <!-- FIXED: White text on dark background -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Goal: 4.7 km"
                                    android:textSize="14sp"
                                    android:textColor="@color/sensacare_primary_very_light" />
                            </LinearLayout>

                            <!-- Replaced confusing indicator with clear status -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="112% of goal"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- SLEEPING CARD - Improved with clear labels -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardSleeping"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/sensacare_primary_lighter">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ivSleepIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_sleep"
                                android:tint="@color/white"
                                android:contentDescription="Sleep" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@id/ivSleepIcon"
                                android:layout_marginStart="12dp">

                                <!-- Added activity type label -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Sleep Duration"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:alpha="0.9" />

                                <!-- FIXED: White text on dark background -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5.2 hours"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white" />

                                <!-- FIXED: White text on dark background -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Goal: 7.5 hours"
                                    android:textSize="14sp"
                                    android:textColor="@color/sensacare_primary_very_light" />
                            </LinearLayout>

                            <!-- Replaced confusing indicator with clear status -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:text="69% of goal"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- WATER INTAKE CARD - Improved with clear labels -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardWaterIntake"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/sensacare_primary_light">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="16dp">

                            <ImageView
                                android:id="@+id/ivWaterIcon"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_water"
                                android:tint="@color/white"
                                android:contentDescription="Water" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_toEndOf="@id/ivWaterIcon"
                                android:layout_marginStart="12dp">

                                <!-- Added activity type label -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Water Intake"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:alpha="0.9" />

                                <!-- FIXED: White text on dark background -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2.3 litres"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white" />

                                <!-- FIXED: White text on dark background -->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Goal: 2.7 litres"
                                    android:textSize="14sp"
                                    android:textColor="@color/sensacare_primary_very_light" />
                            </LinearLayout>

                            <!-- Plus button with label -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/btnAddWater"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:background="@drawable/circle_gray_bg"
                                    android:padding="6dp"
                                    android:src="@drawable/ic_add"
                                    android:tint="@color/sensacare_blue"
                                    android:contentDescription="Add Water" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add"
                                    android:textSize="10sp"
                                    android:textColor="@color/white"
                                    android:layout_marginTop="2dp" />
                            </LinearLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- FIXED: Device Connection Status Card with lighter blue background and border -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDeviceStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical"
                        android:background="@drawable/border_light_gray">

                        <ImageView
                            android:id="@+id/ivDeviceStatus"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_bluetooth_disabled"
                            android:tint="@color/error"
                            android:contentDescription="Device Status" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <!-- FIXED: Default to Not Connected -->
                            <TextView
                                android:id="@+id/tvDeviceStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Connected"
                                android:textColor="@color/error"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <!-- Removed ET492 reference -->
                            <TextView
                                android:id="@+id/tvDeviceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connect your device to see health data"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:visibility="visible" />
                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnConnectDevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/connect_device_action"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:cornerRadius="20dp"
                            android:backgroundTint="@color/sensacare_blue"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"
                            android:minHeight="40dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- FIXED: Removed duplicate Health Monitoring section -->
                <!-- View All Charts Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewAllCharts"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="VIEW ALL HEALTH CHARTS"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    app:cornerRadius="28dp"
                    android:backgroundTint="@color/sensacare_blue"
                    android:layout_marginBottom="16dp" />
                    
                <!-- Spacing for bottom navigation -->
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        
        <!-- FIXED: Bottom Navigation without black highlight -->
        <include
            layout="@layout/bottom_nav_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
