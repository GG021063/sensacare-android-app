<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthChartsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/sensacare_blue"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Health Charts"
            app:titleTextColor="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Time Range Selector -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Range: "
                    android:textColor="@color/text_primary"
                    android:textAppearance="?attr/textAppearanceSubtitle1" />

                <Spinner
                    android:id="@+id/spinnerTimeRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="120dp" />

            </LinearLayout>

            <!-- Chart Title -->
            <TextView
                android:id="@+id/tvChartTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Health Data"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginBottom="16dp" />

            <!-- No Data Message -->
            <TextView
                android:id="@+id/tvNoDataMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No health data available for the selected time range"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- Heart Rate Chart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Heart Rate"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/sensacare_yellow"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/heartRateChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Steps Chart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily Steps"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/activity_green"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/stepsChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sleep Chart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sleep Duration"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@color/sleep_purple"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/sleepChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Blood Pressure Chart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blood Pressure"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="8dp" />

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/bloodPressureChart"
                        android:layout_width="match_parent"
                        android:layout_height="250dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Legend - Fixed text colors to be dark and readable -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About Health Charts"
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="These charts visualize your health data collected from your VeePoo device. You can tap on any data point to see detailed values."
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• Heart Rate: Normal resting heart rate is typically 60-100 BPM\n• Steps: The recommended daily goal is 10,000 steps\n• Sleep: 7-9 hours of sleep is recommended for adults\n• Blood Pressure: Normal is typically below 120/80 mmHg"
                        android:textAppearance="?attr/textAppearanceBody2"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
