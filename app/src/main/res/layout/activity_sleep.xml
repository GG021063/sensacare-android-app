<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".SleepActivity">

    <!-- Purple-themed Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_sleep_purple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Calendar Icon -->
            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tab Layout for Day/Week/Month -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_sleep_purple"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="#EEEEEE" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sleep Duration Display Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Sleep Duration Value -->
                <TextView
                    android:id="@+id/tvSleepDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5H 45M"
                    android:textColor="@color/light_sleep_purple"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Date -->
                <TextView
                    android:id="@+id/tvSleepDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 July, 2025, Fri"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSleepDuration" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Sleep Stage Chart -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Sleep Stage Legend -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <!-- Deep Sleep -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp">
                        
                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/deep_sleep_blue"
                            android:layout_marginEnd="4dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Deep Sleep"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- Light Sleep -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="16dp">
                        
                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/light_sleep_purple"
                            android:layout_marginEnd="4dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Light Sleep"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <!-- REM -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        
                        <View
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:background="@color/rem_sleep_orange"
                            android:layout_marginEnd="4dp" />
                            
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rapid Eye Movement"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sleep Stage Chart -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp">

                    <!-- Sleep Stage Visualization -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F5F0FA" />
                        
                    <!-- Placeholder for sleep stages -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:orientation="horizontal"
                        android:layout_gravity="center">
                        
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/deep_sleep_blue" />
                            
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/light_sleep_purple" />
                            
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/rem_sleep_orange" />
                            
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/light_sleep_purple" />
                            
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/deep_sleep_blue" />
                    </LinearLayout>

                    <!-- Fall Asleep and Wake Up Labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/tvFallAsleepTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:10 Fall Asleep"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tvWakeUpTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05:55 Wake Up"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <!-- Sleep Ratio Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep Ratio"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Sleep Ratio Pie Chart -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Pie Chart -->
                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChartSleepRatio"
                        android:layout_width="180dp"
                        android:layout_height="180dp" />

                    <!-- Sleep Ratio Legend -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_marginStart="16dp">

                        <!-- Deep Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@color/deep_sleep_blue"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deep Sleep"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvDeepSleepDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1H 49M"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Light Sleep -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@color/light_sleep_purple"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Light Sleep"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvLightSleepDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2H 05M"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- REM -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@color/rem_sleep_orange"
                                android:layout_marginEnd="8dp"
                                android:layout_gravity="center_vertical" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rapid Eye Movement"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:layout_weight="1" />

                            <TextView
                                android:id="@+id/tvRemSleepDuration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1H 51M"
                                android:textColor="@android:color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Sleep Quality Score Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sleep Quality Score"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvSleepQualityScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="91"
                        android:textColor="@color/sleep_excellent"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" score"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_gravity="bottom" />
                </LinearLayout>

                <!-- Quality Score Indicator -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <!-- Track -->
                    <LinearLayout
                        android:id="@+id/qualityTrack"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toTopOf="parent">

                        <!-- Poor Section -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/sleep_poor" />

                        <!-- Secondary Section -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/sleep_secondary" />

                        <!-- Good Section -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/sleep_good" />

                        <!-- Excellent Section -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/sleep_excellent" />
                    </LinearLayout>

                    <!-- Indicator -->
                    <View
                        android:id="@+id/viewQualityIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/circle_indicator"
                        app:layout_constraintTop_toTopOf="@id/qualityTrack"
                        app:layout_constraintBottom_toBottomOf="@id/qualityTrack"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.91" /> <!-- Position at 91% -->

                    <!-- Labels -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/qualityTrack">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Poor"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="60"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="75"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="90"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Excellent"
                            android:textColor="@android:color/black"
                            android:textSize="12sp"
                            android:gravity="end" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <!-- Educational Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#F3E5F5"
                android:layout_margin="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn about sleep quality score"
                    android:textColor="@color/light_sleep_purple"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sleep quality score is based on the Pittsburgh Sleep Quality Index calculation of basic principles, through the smartwatch measured by the regularity of sleep, sleep duration, deep sleep ratio, the number of wake up and wake up time and other factors to assess sleep quality and score."
                    android:textColor="@color/light_sleep_purple"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Heart Rate During Sleep Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAverageHeartRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="71 BPM"
                    android:textColor="@color/heart_rate_red"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <!-- Highest Heart Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="highest heart rate"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/ic_arrow_up"
                            android:drawableTint="@color/heart_rate_red"
                            android:drawablePadding="4dp" />

                        <TextView
                            android:id="@+id/tvHighestHeartRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="84 BPM"
                            android:textColor="@color/heart_rate_red"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Lowest Heart Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lowest heart rate"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            android:drawableStart="@drawable/ic_arrow_down"
                            android:drawableTint="@color/heart_rate_red"
                            android:drawablePadding="4dp" />

                        <TextView
                            android:id="@+id/tvLowestHeartRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="64 BPM"
                            android:textColor="@color/heart_rate_red"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Heart Rate Chart (replaced with placeholder) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#FEE6E6"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07/25 00:10 Fall Asleep"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07/25 05:55 Wake Up"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Last 7 Days Sleep Trends Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last 7 Days Sleep Trends"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Sleep Trend Chart -->
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChartSleepTrend"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <!-- Demographic Comparisons Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Early Sleep Comparison -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/tvEarlySleepPercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beyond 26% People Sleep Early"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compare with Male users in the same age group"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Comparison Chart (Placeholder) -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="#F3E5F5" />
                </LinearLayout>

                <!-- Early Wake Comparison -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="24dp">

                    <TextView
                        android:id="@+id/tvEarlyWakePercentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Beyond 87% People Get Up Early"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Compare with Male users in the same age group"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Comparison Chart (Placeholder) -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="#F3E5F5" />
