<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HeartRateActivity">

    <!-- Red-themed Header -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sensacare_blue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Back Button -->
            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Rate"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Calendar Icon -->
            <ImageButton
                android:id="@+id/btnCalendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_calendar"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Tab Layout for Day/Week/Month -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sensacare_blue"
            app:tabIndicatorColor="@android:color/white"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="#EEEEEE" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Heart Rate Display Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Heart Rate Value -->
                <TextView
                    android:id="@+id/tvHeartRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="72"
                    android:textColor="@color/heart_rate_red"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- BPM Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:text="BPM"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@id/tvHeartRate"
                    app:layout_constraintStart_toEndOf="@id/tvHeartRate"
                    app:layout_constraintTop_toTopOf="@id/tvHeartRate"
                    app:layout_constraintVertical_bias="0.7" />

                <!-- Date/Time -->
                <TextView
                    android:id="@+id/tvHeartRateDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 July, 2025 AM 04:07"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvHeartRate" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F0F0F0" />

            <!-- Heart Rate Zones Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Zone Progress Bars -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <!-- Light Zone (Yellow) -->
                    <View
                        android:id="@+id/progressLight"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#FFD700" />

                    <!-- Weight Zone (Orange) -->
                    <View
                        android:id="@+id/progressWeight"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#FFA500" />

                    <!-- Aerobic Zone (Orange-Red) -->
                    <View
                        android:id="@+id/progressAerobic"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#FF6347" />

                    <!-- Anaerobic Zone (Red) -->
                    <View
                        android:id="@+id/progressAnaerobic"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#FF4500" />

                    <!-- VO2 Max Zone (Dark Red) -->
                    <View
                        android:id="@+id/progressVO2Max"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:background="#B22222" />

                </LinearLayout>

                <!-- Zone Labels -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">

                    <!-- Light Zone Label -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Light"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- Weight Zone Label -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Weight"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- Aerobic Zone Label -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Aerobic"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- Anaerobic Zone Label -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Anaerobic"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <!-- VO2 Max Zone Label -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="VO₂ max"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Zone Values -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">

                    <!-- Light Zone Value -->
                    <TextView
                        android:id="@+id/tvLightTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="12H 40M"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <!-- Weight Zone Value -->
                    <TextView
                        android:id="@+id/tvWeightTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <!-- Aerobic Zone Value -->
                    <TextView
                        android:id="@+id/tvAerobicTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <!-- Anaerobic Zone Value -->
                    <TextView
                        android:id="@+id/tvAnaerobicTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                    <!-- VO2 Max Zone Value -->
                    <TextView
                        android:id="@+id/tvVO2MaxTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="0 minutes"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Heart Rate Chart Section -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/heartRateChart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="16dp" />

            <!-- Heart Rate Data Analysis Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FFF1F1"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn heart rate data analysis"
                    android:textColor="@color/heart_rate_red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Heart rate in resting state usually varies between 60 and 100 BPM."
                    android:textColor="@color/heart_rate_red"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active heart rate: exercise process according to the heart rate interval can determine the body's movement state, select the appropriate heart rate interval to achieve better sporting effect."
                    android:textColor="@color/heart_rate_red"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Heart Rate History Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Last 7 Times Trends"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Heart Rate History List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHeartRateHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="80dp"
                tools:itemCount="7"
                tools:listitem="@layout/item_heart_rate_history" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Measure Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMeasure"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:backgroundTint="@color/heart_rate_red"
        android:text="MEASURE"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:cornerRadius="28dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
