<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    
    <!-- White interior fill -->
    <solid android:color="@color/white" />
    
    <!-- Blue border with appropriate thickness -->
    <stroke
        android:width="2dp"
        android:color="@color/sensacare_blue" />
    
    <!-- Size definition -->
    <size
        android:width="48dp"
        android:height="48dp" />
    
    <!-- No padding inside the shape itself, will be handled by the view -->
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp" />
</shape>
